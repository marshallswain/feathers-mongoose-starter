<div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
  <h2>Verify Your Account</h2>
  <p>Please enter the code from the verification email we sent you.</p>

  <form id="loginform" class="form-signin" role="form" can-submit="verify">

    <input type="text" class="form-control" placeholder="Secret Code" required autofocus="" can-value="secret"/>

    <div class="signup-messages bg-danger">
      {{#if notVerified}}
        <p>That account has not been verified.  Please check your email and click the verification link.</p>
      {{/if}}
    </div>

    <br/>

    <button class="btn btn-lg btn-success btn-block" type="submit">Verify Code</button>
    <a href="{{hrefTo 'login'}}" class="btn btn-block btn-link cancel" type="button">Already signed up? Login</a>
  </form>
</div>
